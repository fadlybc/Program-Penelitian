#include <DHT.h>     // Tambahan, meskipun tidak dipakai di receiver
#include <math.h>    // Tambahan, jika ingin menghitung sesuatu nantinya

#define RXD2 16  // Pin RX dari LoRa TX
#define TXD2 17  // Pin TX ke LoRa RX

String data = "";

void setup() {
  Serial.begin(9600); // Untuk USB Serial Monitor
  Serial2.begin(9600, SERIAL_8N1, RXD2, TXD2); // LoRa UART2
}

void loop() {
  if (Serial2.available() > 0) {
    data = Serial2.readStringUntil('\n');  // Baca hingga newline
    Serial.println("Data diterima: " + data);
  }

  delay(100);  // Delay kecil agar tidak terlalu padat
}
