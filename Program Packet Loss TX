#include <SoftwareSerial.h>

SoftwareSerial lora(3, 2); // RX, TX

void setup() {
  Serial.begin(9600);
  lora.begin(9600);
  delay(1000);
  Serial.println("Transmitter ready");
}

void loop() {
  for (int i = 1; i <= 500; i++) {
    lora.print("PING#");
    lora.println(i);
    Serial.println("Kirim: PING#" + String(i));
    delay(100); // jeda antar paket
  }

  Serial.println("Selesai kirim 200 paket");
  while (1);
}
